{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"]
      },
      "dev": {
        "persistent": true,
        "cache": false
      },
      "lint": {
        "dependsOn": ["^lint"]
      },
      "format": {
        "cache": false
      },
      "format:check": {},
      "check-types": {
        "dependsOn": ["^check-types"]
      },
      "test": {
        "dependsOn": ["^build"]
      }
    }
}
